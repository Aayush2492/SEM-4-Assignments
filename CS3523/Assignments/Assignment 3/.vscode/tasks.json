{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "My CPP Build",
      "command": "/usr/bin/clang++",
      "args": [
        "-Iinclude/",
        "-fdiagnostics-color=always",
        "-g",
        "*.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: /usr/bin/clang++"
    }
  ]
}
